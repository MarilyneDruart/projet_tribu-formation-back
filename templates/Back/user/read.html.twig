{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<div class="container">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>{{ user.rolesName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Présentation</th>
                <td>{{ user.presentation }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.image }}</td>
            </tr>
            {# <tr>
                <th>Points d'intérêt</th>
                <td>{{ user.post }}</td>
            </tr> #}
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
        </tbody>
    </table>

        {{ include('back/user/_delete_form.html.twig') }}
        <a class="btn btn-success" href="{{ path('admin_user_list') }}">Retour</a>

</div>
{% endblock %}
{% extends 'base.login.html.twig' %}

{% block body %}
<div class="container">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <form class="form" action="{{ path('app_login') }}" method="post">

        <div class="form-group">
            <label class="text-form" for="username">Email</label>
            <input class="form-control" type="text" id="username" placeholder="Saisissez votre adresse mail" name="_username"/>
        </div>

        <div class="form-group">
            <label class="text-form" for="password">Password</label>
            <input class="form-control" type="password" id="password" placeholder="Saisissez votre mot de passe" name="_password"/>
        </div>

        <p class="submit_button"><button type="submit" id="connexion" class="btn btn-primary">Connexion</button></p>
    </form>
</div>
{% endblock %}

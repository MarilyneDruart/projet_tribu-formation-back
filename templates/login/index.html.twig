{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <form class="form" action="{{ path('admin_login') }}" method="post">

        <div class="form-group">
            <label for="username">Email</label>
            <input class="form-control" type="text" id="username" placeholder="Saisissez votre adresse mail" name="_username"/>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" id="password" placeholder="Saisissez votre mot de passe" name="_password"/>
        </div>

        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
</div>
{% endblock %}

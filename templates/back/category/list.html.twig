{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="d-flex justify-content-evenly flex-wrap">
        <h1>Catégories</h1>
        <div class="d-flex align-items-center">        
            <a href="{{ path('admin_category_create') }}"class="button-add" title="Ajouter"><i class="bi bi-plus-circle"></i> Ajouter</a>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

<div class="table-responsive">
    <table class="table container px-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td><a href="{{ path('admin_category_read', {'id': category.id}) }}">{{ category.name }}<a></td>
                <td>
                    <div class="all-button">
                        <a href="{{ path('admin_category_read', {'id': category.id}) }}" class="button-read-small"
                            title="Afficher"><i class="bi bi-three-dots"></i></a>
                        <a href="{{ path('admin_category_update', {'id': category.id}) }}" class="button-update-small"
                            title="Modifier"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div> 

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="d-flex justify-content-evenly">
        <h1>Liste des catégories</h1>
        <div class="d-flex align-items-center">        
            <a href="{{ path('admin_category_create') }}"class="btn btn-sm btn-success px-5" title="Ajouter"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
            
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>

                        <a href="{{ path('admin_category_read', {'id': category.id}) }}" class="btn btn-sm btn-primary" title="Voir"><i class="bi bi-three-dots"></i></a>
                        <a href="{{ path('admin_category_update', {'id': category.id}) }}" class="btn btn-sm btn-warning" title="Modifier"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Pas d'enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
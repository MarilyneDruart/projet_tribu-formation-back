{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    <div class="all-button">
        <a class="button-update" href="{{ path('admin_category_update', {'id': category.id}) }}">Modifier</a>
        <a class="button-back" href="{{ path('admin_category_list') }}">Retour</a>
        {{ include('back/category/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
    <div class="d-flex justify-content-evenly">
        <h1>Liste des villes</h1>
        <div class="d-flex align-items-center">        
            <a href="{{ path('admin_city_create') }}"class="btn btn-sm btn-success px-5" title="Ajouter"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
            
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Image</th>
                    <th>Pays</th>
                    <th>Slug</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.id }}</td>
                    <td>
                    {% if city.image != "" %}
                        <img style="max-width:100px" src="{{ city.image }}" />
                    {% else %}
                        <p>Pas d'image définie</p>
                    {% endif %}
                    </td>
                    <td>{{ city.name }}</td>
                    <td>{{ city.country }}</td>
                    <td>{{ city.slug }}</td>
                    <td>{{ city.description }}</td>
                    <td>

                        <a href="{{ path('admin_city_read', {'id': city.id}) }}" class="btn btn-sm btn-primary" title="Voir"><i class="bi bi-three-dots"></i></a>
                        <a href="{{ path('admin_city_update', {'id': city.id}) }}" class="btn btn-sm btn-warning" title="Modifier"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Pas d'enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
